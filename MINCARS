//Program to find the minimum number of cars required to accommodate all the friends.

#include <iostream>
using namespace std;

int main() {
	int t,n,x;
	cin>>t;
	while(t--)
	{
	    cin>>n;
	    if(n%4==0)
	    {
	        cout<<(n/4)<<"\n";
	    }
	    else
        {
        cout<<((n/4)+1)<<"\n";
        }
	}
	return 0;
}
