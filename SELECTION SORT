//Program to sort the given numbers using selectionsort

class Solution
{
    public:
    int select(int arr[], int i)
    {
        return 0;
    }
     
    void selectionSort(int arr[], int n)
    {
       for(int i=0;i<n;i++)
       {
           int min=i;
           for(int j=i+1;j<n;j++)
           {
            if(arr[j]<arr[min])
            {
               min=j;
            }
           }
           swap(arr[i],arr[min]);
       }
    }
};
